generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  clerkId       String
  username      String?
  githubStats   Json
  createdAt     DateTime @default(now())
  walletAddress String?   @unique
  updatedAt     DateTime @updatedAt
  imageUrl      String?
}
